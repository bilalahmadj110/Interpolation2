<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="30dp"

                android:adjustViewBounds="true"
                android:src="@drawable/ic_arrow_chart" />

            <EditText
                android:id="@+id/email_textbox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/customborder4"
                android:inputType="textEmailAddress"
                android:hint="Enter Email address"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"

                android:singleLine="true" />

            <EditText
                android:id="@+id/password_textbox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder4"
                android:hint="Enter password"
                android:inputType="numberPassword"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"

                android:paddingEnd="20dp"
                android:paddingRight="20dp" />



            <Button
                android:id="@+id/signin_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/customborder3"
                android:text="Sign In"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/forgot"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="Forgot password?"

                android:textColor="@color/footercolor"
                android:textAllCaps="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Sign In using"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line" />

            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:flexWrap="wrap"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                app:alignItems="center"
                app:alignContent="center"
                app:layout_flexGrow="1">

                <FrameLayout
                    android:layout_height="32dp"
                    android:layout_width="100dp"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:background="@drawable/customborder"
                    android:foreground="?attr/selectableItemBackgroundBorderless"

                    android:id="@+id/google_layout">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/google"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@mipmap/google_icon" >
                    </ImageView>
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@android:color/black"
                        android:text="Google" >
                    </TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_height="32dp"
                    android:layout_width="110dp"
                    android:layout_margin="10dp"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:background="@drawable/customborder"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/facebook_layout">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/facebook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="fitXY"
                        android:src="@mipmap/facebook" >
                    </ImageView>


                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:layout_marginStart="18dp"
                        android:layout_marginLeft="18dp"
                        android:textColor="@android:color/black"
                        android:text="Facebook" >
                    </TextView>

                </FrameLayout>


                <FrameLayout
                    android:layout_height="33dp"
                    android:layout_width="90dp"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:id="@+id/phone_layout"
                    android:background="@drawable/customborder"
                    android:foreground="?attr/selectableItemBackgroundBorderless">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/phone"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_phone_iphone_black_24dp" >
                    </ImageView>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="17dp"
                        android:textColor="@android:color/black"
                        android:text="Phone" >
                    </TextView>
                </FrameLayout>

            </com.google.android.flexbox.FlexboxLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="OR"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line" />
            </LinearLayout>

            <Button
                android:id="@+id/create"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/ic_mail_black_24dp"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:gravity="center"
                android:text="    Create a new account    "
                android:textColor="@color/footercolor"
                android:background="@drawable/create"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>