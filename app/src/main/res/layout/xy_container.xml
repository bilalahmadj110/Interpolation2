<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/history_from"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardElevation="6dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:text="1"
                android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/history_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/history_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="134.23452332423424"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
 />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/history_using"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Newton Backward"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop = "1dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:id="@+id/history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 15, 2018 - 04:46 PM"
                        android:textSize="13sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            <!--<ImageButton-->
                <!--android:id="@+id/delete_history"-->
                <!--android:layout_margin="1dp"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/ic_clear_black_24dp"-->
                <!--android:background="?attr/selectableItemBackgroundBorderless" />-->

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/add_entry_from"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/entry_no"
            android:padding="2dp"
            android:background="@color/background_entry"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/x_value"
            android:paddingHorizontal="6dp"
            android:layout_marginHorizontal="2dp"
            android:inputType="numberDecimal|numberSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="x"/>
        <EditText
            android:id="@+id/y_value"
            android:paddingHorizontal="6dp"
            android:layout_marginHorizontal="2dp"
            android:inputType="numberDecimal|numberSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="y"/>

    </LinearLayout>

</LinearLayout>